{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "#/*": ["src/ui/*"],
      "#/components/*": ["src/ui/components/*"],
      "#/api/*": ["src/ui/api/*"],
      "#/store/*": ["src/ui/store/*"],
      "#/hooks/*": ["src/ui/hooks/*"],
      "#/pages/*": ["src/ui/pages/*"],
      "ui-kit": ["src/ui-kit/index.ts"],
      "ui-kit/*": ["src/ui-kit/*"]
    }
  },
  "include": ["src"],
  "exclude": ["src/electron"]
}
